---
import HeroCTA from "./HeroCTA.astro";
import HeroStats from "./HeroStats.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import { Picture } from "astro:assets";
import backgroundImage from "../assets/cakes/american-heritage-chocolate-vdx5hPQhXFk-unsplash.jpg";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  id="hero-section"
  class="relative min-h-screen flex items-center justify-center"
>
  <!-- bg-[url('../assets/cakes/american-heritage-chocolate-vdx5hPQhXFk-unsplash.jpg')] bg-cover -->
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 z-0">
    <Picture
      src={backgroundImage}
      alt="Decorative cake background"
      class="object-cover object-center w-full h-full z-0"
    />
  </div>

  <!-- Hero Content -->
  <div
    class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10 py-32 md:py-0"
  >
    <div class="max-w-2xl">
      <h2 class="text-lg md:text-xl font-medium text-primary-300 mb-2">
        {t("hero.subtitle")}
      </h2>
      <h1
        class="text-4xl sm:text-5xl md:text-6xl font-serif font-bold text-white mb-6 leading-tight"
      >
        {t("hero.title")}
      </h1>

      <p class="text-lg text-white/80 max-w-lg leading-relaxed">
        {t("hero.description")}
      </p>

      <HeroCTA />

      <HeroStats />
    </div>
  </div>
</section>
