---
import HeroCTA from './HeroCTA.astro';
import HeroStats from './HeroStats.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="relative min-h-screen flex items-center">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-gradient-to-r from-primary-950/90 to-primary-900/70 z-10"></div>
    <img 
      src="https://images.pexels.com/photos/7525172/pexels-photo-7525172.jpeg" 
      alt="Decorative cake background" 
      class="w-full h-full object-cover"
      fetchpriority="high"
    />
  </div>
  
  <!-- Floating decoration elements -->
  <div class="absolute top-20 right-10 w-16 h-16 md:w-24 md:h-24 opacity-70 animate-float z-10">
    <img 
      src="https://images.pexels.com/photos/7525188/pexels-photo-7525188.jpeg" 
      alt="Decorative cake element" 
      class="w-full h-full object-cover rounded-full"
    />
  </div>
  
  <div class="absolute bottom-40 left-10 w-20 h-20 md:w-32 md:h-32 opacity-70 animate-float animation-delay-2000 z-10">
    <img 
      src="https://images.pexels.com/photos/6747/food-dessert-sweet-color.jpg" 
      alt="Decorative cake element" 
      class="w-full h-full object-cover rounded-full"
    />
  </div>
  
  <!-- Hero Content -->
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-20 py-32 md:py-0">
    <div class="max-w-2xl">
      <h2 class="text-lg md:text-xl font-medium text-primary-300 mb-2">{t('hero.subtitle')}</h2>
      <h1 class="text-4xl sm:text-5xl md:text-6xl font-serif font-bold text-white mb-6 leading-tight">
        {t('hero.title')}
      </h1>
      
      <p class="text-lg text-white/80 max-w-lg leading-relaxed">
        {t('hero.description')}
      </p>
      
      <HeroCTA />
      
      <HeroStats />
    </div>
  </div>
</div>