---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="grid grid-cols-3 gap-4 py-8 mt-8 border-t border-white/10">
  <div class="text-center">
    <p class="text-3xl md:text-4xl font-bold text-white">15+</p>
    <p class="text-sm text-primary-200 mt-1">{t('hero.years')}</p>
  </div>
  
  <div class="text-center">
    <p class="text-3xl md:text-4xl font-bold text-white">500+</p>
    <p class="text-sm text-primary-200 mt-1">{t('hero.satisfied')}</p>
  </div>
  
  <div class="text-center">
    <p class="text-3xl md:text-4xl font-bold text-white">30+</p>
    <p class="text-sm text-primary-200 mt-1">{t('hero.varieties')}</p>
  </div>
</div>